@model aspnet_config.Models.User
@{
    ViewBag.Title = "Editing user";
}
<form asp-action="editprofile" asp-controller="home" asp-route-id="@Model.Id_User">
    <input type="hidden" asp-for="Id_User" />
    <div class="form-group">
        <label asp-for="Email_User" class="control-label">Email</label>
        <input type="email" asp-for="Email_User" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="About_User" class="control-label">About me</label>
        <input type="text" asp-for="About_User" class="form-control" />
    </div>
    @if (TestClass.TestInt == 1)
    {
        <div class="form-group">
            <label asp-for="Login_User" class="control-label">Login</label>
            <input type="text" asp-for="Login_User" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password_User" class="control-label">Password</label>
            <input type="password" asp-for="Password_User" class="form-control" />
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>