@model aspnet_config.ViewModels.LoginModel

<h2 style="display:flex; justify-content:center;">Вход на сайт</h2>

<a style="color: #00FFFF;display: flex; justify-content: center;" asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div style="display:flex; justify-content:center;" class="form-group">
            <label asp-for="Email">Введите Email </label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div style="display:flex; justify-content:center;" class="form-group">
            <label asp-for="Password">Введите пароль </label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div style="display:flex; justify-content:center;" class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>